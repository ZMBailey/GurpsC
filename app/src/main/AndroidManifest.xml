<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="soulstudios.gurpsc">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CharSheetActivity"
            android:label="@string/title_activity_char_sheet"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadActivity"
            android:label="@string/title_activity_load"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddSkillActivity"
            android:label="@string/title_activity_add_skill"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>