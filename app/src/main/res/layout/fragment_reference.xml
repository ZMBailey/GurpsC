<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="soulstudios.gurpsc.PageFragment">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:background="@drawable/outer_border"
        android:id="@+id/gridLayout">

            <TextView
                android:id="@+id/Reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="4"
                android:text="@string/enc_title" />

            <TextView
                android:id="@+id/Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:gravity="center"
                android:layout_column="0"
                android:layout_row="1"
                android:text="@string/lvl_title" />

            <TextView
                android:id="@+id/MaxLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="1"
                android:text="@string/load_title" />

            <TextView
                android:id="@+id/Movement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="1"
                android:text="@string/move_title" />

            <TextView
                android:id="@+id/Dodge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_column="3"
                android:layout_row="1"
                android:text="@string/dodge_title" />

        <!--levels-->

            <TextView
                android:id="@+id/None"
                android:tag="Ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_column="0"
                android:layout_row="2"
                android:text="@string/none" />

            <TextView
                android:id="@+id/Light"
                android:tag="Ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_column="0"
                android:layout_row="3"
                android:text="@string/light" />

            <TextView
                android:id="@+id/Medium"
                android:tag="Ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_column="0"
                android:layout_row="4"
                android:text="@string/medium" />

            <TextView
                android:id="@+id/Heavy"
                android:tag="Ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_column="0"
                android:layout_row="5"
                android:text="@string/heavy" />

            <TextView
                android:id="@+id/XHeavy"
                android:tag="Ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_column="0"
                android:layout_row="6"
                android:text="@string/x_heavy" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="95dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="end"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowSpan="5"
                android:background="@android:color/black" />

        <!--Max Load-->

            <TextView
                android:id="@+id/load_none"
                android:tag="Ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:layout_column="1"
                android:layout_row="2"
                android:text="@string/load_none" />

            <TextView
                android:id="@+id/load_light"
                android:tag="Ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:layout_column="1"
                android:layout_row="3"
                android:text="@string/load_light" />

            <TextView
                android:id="@+id/load_med"
                android:tag="Ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:layout_column="1"
                android:layout_row="4"
                android:text="@string/load_med" />

            <TextView
                android:id="@+id/load_heavy"
                android:tag="Ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:layout_column="1"
                android:layout_row="5"
                android:text="@string/load_heavy" />

            <TextView
                android:id="@+id/load_xheavy"
                android:tag="Ref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:layout_column="1"
                android:layout_row="6"
                android:text="@string/load_xheavy" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="95dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="end"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_rowSpan="5"
            android:background="@android:color/black" />

        <!--Move-->

        <TextView
            android:id="@+id/move_none"
            android:tag="Ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_column="2"
            android:layout_row="2"
            android:text="@string/move_none" />

        <TextView
            android:id="@+id/move_light"
            android:tag="Ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_column="2"
            android:layout_row="3"
            android:text="@string/move_light" />

        <TextView
            android:id="@+id/move_med"
            android:tag="Ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_column="2"
            android:layout_row="4"
            android:text="@string/move_med" />

        <TextView
            android:id="@+id/move_heavy"
            android:tag="Ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_column="2"
            android:layout_row="5"
            android:text="@string/move_heavy" />

        <TextView
            android:id="@+id/move_xheavy"
            android:tag="Ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_column="2"
            android:layout_row="6"
            android:text="@string/move_xheavy" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="95dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="end"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_rowSpan="5"
            android:background="@android:color/black" />

        <!--Dodge-->

        <TextView
            android:id="@+id/dodge_none"
            android:tag="Ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_column="3"
            android:layout_row="2"
            android:text="@string/dodge_none" />

        <TextView
            android:id="@+id/dodge_light"
            android:tag="Ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_column="3"
            android:layout_row="3"
            android:text="@string/dodge_light" />

        <TextView
            android:id="@+id/dodge_med"
            android:tag="Ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_column="3"
            android:layout_row="4"
            android:text="@string/dodge_med" />

        <TextView
            android:id="@+id/dodge_heavy"
            android:tag="Ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_column="3"
            android:layout_row="5"
            android:text="@string/dodge_heavy" />

        <TextView
            android:id="@+id/dodge_xheavy"
            android:tag="Ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:layout_column="3"
            android:layout_row="6"
            android:text="@string/dodge_xheavy" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:background="@drawable/outer_border"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/Lift_Move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:text="@string/lift_title" />

    <!--levels-->

    <TextView
        android:id="@+id/basic_lift"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/basic_lift" />

    <TextView
        android:id="@+id/one_hand"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/one_handed" />

    <TextView
        android:id="@+id/two_hand"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/two_handed" />

    <TextView
        android:id="@+id/shove"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_column="0"
        android:layout_row="4"
        android:text="@string/shove_knock" />

    <TextView
        android:id="@+id/run_shove"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_column="0"
        android:layout_row="5"
        android:text="@string/running_shove" />

    <!--Max Load-->

    <TextView
        android:id="@+id/carry"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_column="0"
        android:layout_row="6"
        android:text="@string/carry" />

    <TextView
        android:id="@+id/shift"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_column="0"
        android:layout_row="7"
        android:text="@string/shift" />

    <TextView
        android:id="@+id/basiclift_no"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:layout_column="1"
        android:layout_row="1"
        android:text="@string/basic_l" />

    <TextView
        android:id="@+id/onehand_no"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:layout_column="1"
        android:layout_row="2"
        android:text="@string/one_l" />

    <TextView
        android:id="@+id/twohand_no"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:layout_column="1"
        android:layout_row="3"
        android:text="@string/two_l" />

    <TextView
        android:id="@+id/shove_no"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:layout_column="1"
        android:layout_row="4"
        android:text="@string/shove_l" />

    <TextView
        android:id="@+id/runshove_no"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:layout_column="1"
        android:layout_row="5"
        android:text="@string/run_l" />

    <TextView
        android:id="@+id/carry_no"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:layout_column="1"
        android:layout_row="6"
        android:text="@string/carry_l" />

    <TextView
        android:id="@+id/shift_no"
        android:tag="Ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:layout_column="1"
        android:layout_row="7"
        android:text="@string/shift_l" />

    </GridLayout>
</RelativeLayout>
