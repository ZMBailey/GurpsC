                    android:id="@+id/dex_input"
                    android:tag="Attr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="number"
                    android:text=""
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
