<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/skill_Layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="soulstudios.gurpsc.PageFragment">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:background="@drawable/outer_border"
        android:id="@+id/skill_grid">

            <TextView
                android:id="@+id/Skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="6"
                android:text="@string/skills_title" />

            <TextView
                android:id="@+id/Sk_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="1"
                android:text="@string/skill_name" />

            <TextView
                android:id="@+id/Sk_Spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="1"
                android:text="@string/skill_spec" />

            <TextView
                android:id="@+id/Sk_Diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="1"
                android:text="@string/skill_diff" />

            <TextView
                android:id="@+id/Sk_Attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_column="3"
                android:layout_row="1"
                android:text="@string/skill_attr" />

            <TextView
                android:id="@+id/Sk_Rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_columnWeight="1"
                android:layout_column="4"
                android:layout_row="1"
                android:text="@string/skill_rank" />

        <TextView
            android:id="@+id/Sk_Del"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_column="5"
            android:layout_row="1"
            android:text="@string/but_del" />



    </GridLayout>
</android.support.v4.widget.NestedScrollView>
